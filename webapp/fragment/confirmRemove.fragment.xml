
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
>

  <Dialog title="Confirm deletion">
        <HBox class="sapUiMediumMargin">
             <Text   text="Do you want to delete this employee?" />
       </HBox >

        <buttons >
             <Button text="Yes" press="onConfirmRemove" class="sapUiMediumMargin" icon="sap-icon://save"   />
             <Button text="No" press="onCancelFragmentConfirmRemove" class="sapUiMediumMargin" icon="sap-icon://sys-cancel"   />
        </buttons>

   
   </Dialog>
   
</core:FragmentDefinition>

